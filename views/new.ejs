<% layout('./layout/boilarplate.ejs') -%>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
      <h2 class="text-center mb-4">Add a New Movie</h2>

      <form action="/addNew" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
        
        <div class="mb-3">
          <label for="title" class="form-label">Movie Title</label>
          <input type="text" class="form-control" name="Movie[title]" id="title" required>
          <div class="invalid-feedback">Please enter a movie title.</div>
        </div>

        <div class="mb-3">
          <label for="imageURL" class="form-label">Upload Image</label>
          <input type="file" class="form-control" name="Movie[imageURL]" id="imageURL">
          <div class="invalid-feedback">Please upload an image.</div>
        </div>

        <div class="mb-3">
          <label for="director" class="form-label">Director's Name</label>
          <input type="text" class="form-control" name="Movie[director]" id="director" required>
          <div class="invalid-feedback">Please enter the director's name.</div>
        </div>

        <div class="mb-3">
          <label for="rating" class="form-label">Rating (0â€“10)</label>
          <input type="number" class="form-control" name="Movie[rating]" id="rating" min="0" max="10" required>
          <div class="invalid-feedback">Enter a valid rating between 0 and 10.</div>
        </div>

        <div class="mb-3">
          <label for="hero" class="form-label">Hero Name</label>
          <input type="text" class="form-control" name="Movie[hero]" id="hero" required>
          <div class="invalid-feedback">Please enter the hero's name.</div>
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Add New Movie</button>
        </div>

      </form>
    </div>
  </div>
</div>
