<% layout('./layout/boilarplate.ejs') -%>

<div class="container my-5">
    <h3 class="text-muted mb-4">All The Movies</h3>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% for(let movie of movies) { %>
            <div class="col">
                <a href="/movies/<%= movie._id %>" class="text-decoration-none text-dark">
                    <div class="card h-100 movie-card shadow-sm rounded-4">
                        <img src="<%= movie.imageURL.url %>" class="card-img-top" alt="<%= movie.title %>" style="height: 300px; object-fit: cover; border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                        <div class="card-body text-center">
                            <h5 class="card-title movie-title fw-bold"><%= movie.title %></h5>
                            <p class="card-text text-secondary mb-1"><strong>Director:</strong> <%= movie.director %></p>
                            <p class="card-text text-secondary mb-1"><strong>Rating:</strong> <%= movie.rating %></p>
                            <p class="card-text text-secondary"><strong>Hero:</strong> <%= movie.hero %></p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>
